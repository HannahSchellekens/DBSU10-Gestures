<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nl.tue.dbsu10.group6.group6.activity.MainActivity">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/fab"
            android:src="@drawable/ic_add_white_18dp"
            app:borderWidth="2dp"
            app:fabSize="normal"
            android:onClick="add"
            app:rippleColor="@color/primaryDark"
            android:layout_marginRight="24dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

    <ScrollView
            android:layout_width="368dp"
            android:layout_height="495dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">

        <GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="bottom"
                android:scrollbars="horizontal"
                android:columnCount="2" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="8dp">
        </GridLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
